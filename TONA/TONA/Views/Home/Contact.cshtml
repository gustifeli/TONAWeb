@{
    
    ViewBag.Title = "Contact";
    Layout = "~/Views/Shared/_LayoutTonaWhite.cshtml";
}
<section>
        <div class="container">
            <form method="post" name="form1" id="form1" action="mailto:tonaoficial@hotmail.com">
                <div class="form-group">
                    <br />
                    <label>
                        <span class="txt-label">* Nombre: <input type="text" name="nombre" id="nombre" class="form-control"/></span>
                    </label><br /><label>
                        <span class="tex-label">* Apellido: <input type="text" name="apellido" id="apellido" class="form-control"/></span>
                    </label>
                    <br />
                    <label>
                        <span class="tex-label">
                            * E-mail:
                            <input type="text" name="email" id="email" class="form-control"/>
                        </span>
                    </label>
                    <br />
                    <label>
                        * Telefono:
                        <input type="text" name="telefono" id="telefono" class="form-control"/>
                    </label>
                    <br />
                    <label>
                        * Localidad:
                        <input type="text" name="localidad" id="localidad" class="form-control"/>
                    </label>
                    <br />
                    <p>* Datos obligatorios</p>
                </div>
                <div class="form-group">
                    <br />
                    <label>
                        <span class="form-group">
                            Mensaje:
                            <textarea class="form-control" name="comentario" rows="7" cols="40" id="comentario"></textarea>
                        </span>
                    </label>
                    <div id="clear">
                        <input name="sumbit" type="button" class="button boton" id="sumbit_contacto" value="ENVIAR" />
                        <p class="ocultar">
                            Para comunicarte, completá el formulario, o envianos un mail a la siguiente dirección:
                            <a href="mailto:tonaoficial@hotmail.com" class="linea">tonaoficial@hotmail.com</a>
                        </p>
                        <div id="clear"></div>
                    </div>
                </div>
            </form>
        </div>
</section>